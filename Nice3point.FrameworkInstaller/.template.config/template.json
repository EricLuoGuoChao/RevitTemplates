{
  "$schema": "http://json.schemastore.org/template",
  "author": "Nice3point",
  "name": "Revit Installer",
  "shortName": "revit-framework-installer",
  "identity": "Nice3point.RevitInstaller.NetFramework",
  "defaultName": "Installer",
  "description": "Project for creating installer for Revit add-ins based on the .Net Framework",
  "classifications": [
    "Common",
    "Console",
    "NetFramework",
    "Revit",
    "Installer"
  ],
  "tags": {
    "language": "C#",
    "type": "project",
    "platform": ".NET"
  },
  "sourceName": "Nice3point.FrameworkInstaller",
  "preferNameDirectory": true,
  "placeholderFilename": ".scratch",
  "guids": [
    "AAAAAAAA-AAAA-AAAA-AAAA-AAAAAAAAAAAA",
    "BBBBBBBB-BBBB-BBBB-BBBB-BBBBBBBBBBBB"
  ],
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "text",
      "replaces": "v4.8",
      "isRequired": true,
      "defaultValue": "<FullTargetFramework>"
    },
    "CompanyName": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "CompanyName",
      "defaultValue": "SimpleCompany"
    },
    "CompanyTrademark": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "CompanyTrademark",
      "defaultValue": ""
    },
    "Year": {
      "type": "generated",
      "generator": "now",
      "replaces": "Year",
      "parameters": {
        "format": "yyyy"
      }
    }
  },
  "primaryOutputs": [
    {
      "path": "Installer.cs"
    }
  ],
  "postActions": [
    {
      "description": "Opens Installer.cs in the editor",
      "manualInstructions": [],
      "actionId": "84C0DA21-51C8-4541-9940-6CA19AF04EE6",
      "args": {
        "files": "0"
      },
      "continueOnError": true
    }
  ]
}