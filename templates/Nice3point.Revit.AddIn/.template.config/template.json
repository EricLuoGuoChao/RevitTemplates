{
  "$schema": "http://json.schemastore.org/template",
  "author": "Nice3point",
  "name": "Revit AddIn",
  "shortName": "revit-addin",
  "identity": "Nice3point.Revit.AddIn",
  "generatorVersions": "[1.0.0.0-*)",
  "defaultName": "RevitAddIn",
  "description": "Project for creating Revit AddIn",
  "classifications": [
    "Common",
    "Library",
    "Revit",
    "AddIn"
  ],
  "tags": {
    "language": "C#",
    "type": "project",
    "platform": ".NET"
  },
  "sourceName": "Nice3point.Revit.AddIn",
  "preferNameDirectory": true,
  "placeholderFilename": "keep.folder",
  "guids": [
    "AAAAAAAA-AAAA-AAAA-AAAA-AAAAAAAAAAAA"
  ],
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net48",
          "description": "Target net4.8"
        }
      ],
      "replaces": "net48",
      "defaultValue": "net48"
    },
    "CommandStyle": {
      "type": "parameter",
      "description": "Changes the plugin type to Command.",
      "datatype": "bool",
      "defaultValue": "false"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(CommandStyle)",
          "exclude": [
            "Application.cs",
            "RevitUtils/RibbonUtils.cs",
            "Resources/Icons/RibbonIcon16.png",
            "Resources/Icons/RibbonIcon32.png"
          ]
        }
      ]
    }
  ],
  "primaryOutputs": [
    {
      "path": "Application.cs"
    }
  ],
  "postActions": [
    {
      "description": "Opens Application.cs in the editor",
      "manualInstructions": [],
      "actionId": "84C0DA21-51C8-4541-9940-6CA19AF04EE6",
      "args": {
        "files": "0"
      },
      "continueOnError": true
    }
  ],
  "SpecialCustomOperations": {
    "**/*.addin": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "actionableIf": [ "#if", "<!--#if" ],
            "actionableElse": [ "#else", "<!--#else" ],
            "actionableElseif": [ "#elseif", "<!--#elseif" ],
            "endif": [ "#endif", "#endif-->" ],
            "trim" : "true",
            "wholeLine": "true"
          }
        }
      ]
    }
  }
}