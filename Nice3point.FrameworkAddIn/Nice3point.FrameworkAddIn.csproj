    <Choose>
        <When Condition="$(Configuration.Contains('R19'))">
            <PropertyGroup>
                <RevitVersion>2019</RevitVersion>
            </PropertyGroup>
        </When>
        <When Condition="$(Configuration.Contains('R20'))">
            <PropertyGroup>
                <RevitVersion>2020</RevitVersion>
            </PropertyGroup>
        </When>
        <When Condition="$(Configuration.Contains('R21'))">
            <PropertyGroup>
                <RevitVersion>2021</RevitVersion>
            </PropertyGroup>
        </When>
        <When Condition="$(Configuration.Contains('R22'))">
            <PropertyGroup>
                <RevitVersion>2022</RevitVersion>
            </PropertyGroup>
        </When>
    </Choose>
    <ItemGroup>
        <PackageReference Include="ILRepack.Lib.MSBuild.Task">
            <Version>2.0.18.2</Version>
        </PackageReference>
        <PackageReference Include="JetBrains.Annotations">
            <Version>2021.2.0</Version>
        </PackageReference>
        <PackageReference Include="Revit_API_x64" Version="$(RevitVersion).0.0"/>
    </ItemGroup>
    <ItemGroup>
        <Reference Include="System"/>
        <Reference Include="System.Core"/>
        <Reference Include="System.Data"/>
        <Reference Include="System.Xml"/>
        <Reference Include="System.Xaml"/>
        <Reference Include="WindowsBase"/>
        <Reference Include="PresentationCore"/>
        <Reference Include="PresentationFramework"/>
    </ItemGroup>
    <ItemGroup>
        <Compile Include="Application.cs"/>
        <Compile Include="Commands\Command.cs"/>
        <Compile Include="Properties\AssemblyInfo.cs"/>
        <Compile Include="RevitUtils\Guids.cs"/>
        <Compile Include="RevitUtils\RevitApi.cs"/>
        <Compile Include="RevitUtils\TransactionManager.cs"/>
        <Compile Include="ViewModel\Converters\ValueConverters.cs"/>
        <Compile Include="ViewModel\Objects\RelayCommand.cs"/>
        <Compile Include="ViewModel\SimpleViewModel.cs"/>
        <Compile Include="ViewModel\Utils\ViewModelUtils.cs"/>
        <Compile Include="View\Utils\ViewUtils.cs"/>
        <Compile Include="View\SimpleView.xaml.cs">
            <DependentUpon>SimpleView.xaml</DependentUpon>
        </Compile>
    </ItemGroup>
    <ItemGroup>
        <Folder Include="Core"/>
        <Folder Include="Resources\Fonts"/>
        <Folder Include="Resources\Localization"/>
        <Folder Include="Utils"/>
    </ItemGroup>
    <ItemGroup>
        <Resource Include="Resources\Icons\RibbonIcon16.png"/>
        <Resource Include="Resources\Icons\RibbonIcon32.png"/>
    </ItemGroup>
    <ItemGroup>
        <Page Include="View\SimpleView.xaml"/>
        <Page Include="View\Themes\ControlStyle.xaml"/>
        <Page Include="View\Themes\ControlTemplate.xaml"/>
    </ItemGroup>
    <ItemGroup>
        <None Include="App.config"/>
        <None Include="Nice3point.FrameworkAddIn.addin">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets"/>

    <PropertyGroup>
        <AddinDir>bin\AddIn $(RevitVersion)\</AddinDir>
        <MergedDir>$(TargetDir)Merged assembly\</MergedDir>
        <OutAddinDir>$(AddinDir)$(AssemblyName)\</OutAddinDir>
    </PropertyGroup>
    <ItemGroup>
        <AddinDll Include="$(TargetDir)$(AssemblyName).dll"/>
        <!--        Add DLLs to output folder or for merging below-->
        <!--        <AddinDll Include="$(TargetDir)Simple.dll" />-->
    </ItemGroup>

    <Target Name="AfterBuild">
        <CallTarget Condition="$(Configuration.Contains('Debug'))" Targets="DebugAfterBuild">
            <Output TaskParameter="TargetOutputs" ItemName="OutDll"/>
        </CallTarget>
        <CallTarget Condition="$(Configuration.Contains('Release'))" Targets="ReleaseAfterBuild">
            <Output TaskParameter="TargetOutputs" ItemName="OutDll"/>
        </CallTarget>
        <RemoveDir Directories="$(AddinDir)"/>
        <Copy SourceFiles="$(TargetDir)$(AssemblyName).addin" DestinationFolder="$(AddinDir)"/>
        <Copy SourceFiles="@(OutDll)" DestinationFolder="$(OutAddinDir)"/>
    </Target>
    <Target Name="DebugAfterBuild" Outputs="@(OutDll)">
        <ItemGroup>
            <OutLibPath Include="$(AddinDir)**\*.*"/>
        </ItemGroup>
        <Copy SourceFiles="@(OutLibPath)" DestinationFolder="$(AppData)\Autodesk\Revit\Addins\$(RevitVersion)\%(RecursiveDir)"/>
        <ItemGroup>
            <OutDll Include="@(AddinDll)"/>
        </ItemGroup>
    </Target>
    <Target Name="ReleaseAfterBuild" Outputs="@(OutDll)">
        <MakeDir Directories="$(MergedDir)"/>
        <ILRepack TargetKind="Dll" LogFile="$(TargetDir)\ILRepackLog.txt" InputAssemblies="@(AddinDll)" OutputFile="$(MergedDir)$(AssemblyName).dll" LibraryPath="$(TargetDir)"/>
        <ItemGroup>
            <OutDll Include="$(MergedDir)*.dll"/>
        </ItemGroup>
    </Target>
</Project>
